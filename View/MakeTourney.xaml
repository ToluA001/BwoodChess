<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BwoodChess.View.MakeTourney"
             Title="MakeTourney" BackgroundColor="#272537">
    <VerticalStackLayout
        VerticalOptions="Center">

        <Label Text="Name: "/>
        <Editor Text="{Binding Name}"/>

        <Button
            Text="Add Person"
            Command="{Binding AddPerson}"
                BackgroundColor="Lavender"
                WidthRequest="500" HeightRequest="60" Margin="0,0,0,0"/>

    </VerticalStackLayout>
</ContentPage>